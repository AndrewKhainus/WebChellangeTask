<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginTop="10dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tvTitleProfile_FS"
        style="@style/MainTheme.Title.Normal.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:text="Profile information"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"

        >

        <TextView
            style="@style/MainTheme.SubTitle.Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"/>

        <android.support.v7.widget.AppCompatSpinner
            android:id="@+id/spGender_FS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingEnd="24dp"
        android:paddingStart="24dp">

        <TextView
            style="@style/MainTheme.SubTitle.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Age"/>

        <EditText
            android:id="@+id/etAge_FS"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="0"
            android:inputType="number"/>

        <Space
            android:layout_width="30dp"
            android:layout_height="wrap_content"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"

        >

        <TextView
            style="@style/MainTheme.SubTitle.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Height"/>

        <EditText
            android:id="@+id/etHeight_FS"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="0"
            android:inputType="number"
            />

        <TextView
            style="@style/MainTheme.SubTitle.Normal"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="cm"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"

        >

        <TextView
            style="@style/MainTheme.SubTitle.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Weight"/>

        <EditText
            android:id="@+id/etWeight_FS"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="0"
            android:inputType="number"
            />

        <TextView

            style="@style/MainTheme.SubTitle.Normal"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="kg"/>


    </LinearLayout>

    <TextView
        android:id="@+id/tvTitleTimeSynch_FS"
        style="@style/MainTheme.Title.Normal.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"
        android:text="Time synchronization"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingEnd="24dp"
        android:paddingStart="24dp"

        >

        <TextView
            style="@style/MainTheme.SubTitle.Normal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Synchronization with Google Fit"/>

        <EditText
            android:id="@+id/etTimeSynchronization_FS"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:hint="0"
            android:inputType="number"
            />

        <TextView

            style="@style/MainTheme.SubTitle.Normal"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:text="hour"/>
    </LinearLayout>

</LinearLayout>